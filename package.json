{
  "name": "bookmarker",
  "displayName": "Bookmarker",
  "description": "Bookmarker - Bookmark and organize your favorite files for quick access",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/user/bookmarker.git"
  },
  "license": "MIT",
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "bookmarker.addBookmark",
        "title": "Bookmarker: Add Bookmark",
        "icon": "$(bookmark)"
      },
      {
        "command": "bookmarker.addBookmarkWithLabel",
        "title": "Bookmarker: Add Bookmark with Label",
        "icon": "$(tag)"
      },
      {
        "command": "bookmarker.removeBookmark",
        "title": "Bookmarker: Remove Bookmark",
        "icon": "$(trash)"
      },
      {
        "command": "bookmarker.editBookmarkLabel",
        "title": "Bookmarker: Edit Label",
        "icon": "$(edit)"
      },
      {
        "command": "bookmarker.clearAllBookmarks",
        "title": "Bookmarker: Clear All Bookmarks",
        "icon": "$(clear-all)"
      },
      {
        "command": "bookmarker.refreshBookmarks",
        "title": "Bookmarker: Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "bookmarker.renameCategory",
        "title": "Bookmarker: Rename Category",
        "icon": "$(edit)"
      },
      {
        "command": "bookmarker.removeCategory",
        "title": "Bookmarker: Remove Category",
        "icon": "$(trash)"
      },
      {
        "command": "bookmarker.createNewCategory",
        "title": "Bookmarker: New Category",
        "icon": "$(new-folder)"
      },
      {
        "command": "bookmarker.searchBookmarks",
        "title": "Bookmarker: Search Bookmarks",
        "icon": "$(search)"
      },
      {
        "command": "bookmarker.addSubCategory",
        "title": "Bookmarker: Add Subcategory",
        "icon": "$(new-folder)"
      }
    ],
    "views": {
      "bookmarkerView": [
        {
          "id": "bookmarkerExplorer",
          "name": "Bookmarker",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "bookmarkerView",
          "title": "Bookmarker",
          "icon": "$(bookmark)"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "bookmarkerExplorer",
        "contents": "No bookmarks found.\n[Add Bookmark](command:bookmarker.addBookmark)\nTo add a bookmark, open a file and use the command palette or right-click menu."
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "bookmarker.addBookmark",
          "when": "view == bookmarkerExplorer",
          "group": "navigation@1"
        },
        {
          "command": "bookmarker.createNewCategory",
          "when": "view == bookmarkerExplorer",
          "group": "navigation@2"
        },
        {
          "command": "bookmarker.clearAllBookmarks",
          "when": "view == bookmarkerExplorer",
          "group": "navigation@3"
        },
        {
          "command": "bookmarker.searchBookmarks",
          "when": "view == bookmarkerExplorer",
          "group": "navigation@4"
        },
        {
          "command": "bookmarker.refreshBookmarks",
          "when": "view == bookmarkerExplorer",
          "group": "navigation@5"
        }
      ],
      "view/title/context": [],
      "view/item/context": [
        {
          "command": "bookmarker.editBookmarkLabel",
          "when": "view == bookmarkerExplorer && viewItem == bookmark",
          "group": "inline@1"
        },
        {
          "command": "bookmarker.removeBookmark",
          "when": "view == bookmarkerExplorer && viewItem == bookmark",
          "group": "inline@2"
        },
        {
          "command": "bookmarker.renameCategory",
          "when": "view == bookmarkerExplorer && viewItem == category",
          "group": "inline@1"
        },
        {
          "command": "bookmarker.removeCategory",
          "when": "view == bookmarkerExplorer && viewItem == category",
          "group": "inline@2"
        },
        {
          "command": "bookmarker.addSubCategory",
          "when": "view == bookmarkerExplorer && viewItem == category",
          "group": "inline@3"
        }
      ],
      "editor/context": [
        {
          "command": "bookmarker.addBookmark",
          "group": "bookmarks@1",
          "when": "editorFocus"
        },
        {
          "command": "bookmarker.addBookmarkWithLabel",
          "group": "bookmarks@2",
          "when": "editorFocus"
        }
      ],
      "commandPalette": [
        {
          "command": "bookmarker.removeBookmark",
          "when": "false"
        },
        {
          "command": "bookmarker.renameCategory",
          "when": "false"
        },
        {
          "command": "bookmarker.removeCategory",
          "when": "false"
        }
      ]
    },
    "keybindings": [
      {
        "command": "bookmarker.addBookmark",
        "key": "ctrl+alt+b",
        "mac": "cmd+alt+b",
        "when": "editorFocus"
      },
      {
        "command": "bookmarker.addBookmarkWithLabel",
        "key": "ctrl+alt+shift+b",
        "mac": "cmd+alt+shift+b",
        "when": "editorFocus"
      },
      {
        "command": "bookmarker.searchBookmarks",
        "key": "ctrl+alt+f",
        "mac": "cmd+alt+f"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "esbuild": "^0.25.8",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
