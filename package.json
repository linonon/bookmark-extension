{
  "name": "bookmark-extension",
  "displayName": "File Bookmarks",
  "description": "Bookmark and organize your favorite files for quick access",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "bookmark-extension.addBookmark",
        "title": "Add Bookmark",
        "icon": "$(bookmark)"
      },
      {
        "command": "bookmark-extension.addBookmarkWithLabel",
        "title": "Add Bookmark with Label",
        "icon": "$(tag)"
      },
      {
        "command": "bookmark-extension.removeBookmark",
        "title": "Remove Bookmark",
        "icon": "$(trash)"
      },
      {
        "command": "bookmark-extension.editBookmarkLabel",
        "title": "Edit Label",
        "icon": "$(edit)"
      },
      {
        "command": "bookmark-extension.clearAllBookmarks",
        "title": "Clear All Bookmarks",
        "icon": "$(clear-all)"
      },
      {
        "command": "bookmark-extension.refreshBookmarks",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "bookmark-extension.moveBookmarkToCategory",
        "title": "Move to Category",
        "icon": "$(folder)"
      },
      {
        "command": "bookmark-extension.renameCategory",
        "title": "Rename Category",
        "icon": "$(edit)"
      },
      {
        "command": "bookmark-extension.removeCategory",
        "title": "Remove Category",
        "icon": "$(trash)"
      },
      {
        "command": "bookmark-extension.createNewCategory",
        "title": "New Category",
        "icon": "$(new-folder)"
      },
      {
        "command": "bookmark-extension.searchBookmarks",
        "title": "Search Bookmarks",
        "icon": "$(search)"
      }
    ],
    "views": {
      "bookmarkView": [
        {
          "id": "bookmarkExplorer",
          "name": "Bookmarks",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "bookmarkView",
          "title": "Bookmarks",
          "icon": "$(bookmark)"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "bookmarkExplorer",
        "contents": "No bookmarks found.\n[Add Bookmark](command:bookmark-extension.addBookmark)\nTo add a bookmark, open a file and use the command palette or right-click menu."
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "bookmark-extension.addBookmark",
          "when": "view == bookmarkExplorer",
          "group": "navigation@1"
        },
        {
          "command": "bookmark-extension.clearAllBookmarks",
          "when": "view == bookmarkExplorer",
          "group": "navigation@2"
        },
        {
          "command": "bookmark-extension.searchBookmarks",
          "when": "view == bookmarkExplorer",
          "group": "navigation@3"
        },
        {
          "command": "bookmark-extension.refreshBookmarks",
          "when": "view == bookmarkExplorer",
          "group": "navigation@4"
        }
      ],
      "view/item/context": [
        {
          "command": "bookmark-extension.editBookmarkLabel",
          "when": "view == bookmarkExplorer && viewItem == bookmark",
          "group": "inline@1"
        },
        {
          "command": "bookmark-extension.moveBookmarkToCategory",
          "when": "view == bookmarkExplorer && viewItem == bookmark",
          "group": "inline@2"
        },
        {
          "command": "bookmark-extension.removeBookmark",
          "when": "view == bookmarkExplorer && viewItem == bookmark",
          "group": "inline@3"
        },
        {
          "command": "bookmark-extension.renameCategory",
          "when": "view == bookmarkExplorer && viewItem == category",
          "group": "inline@1"
        },
        {
          "command": "bookmark-extension.removeCategory",
          "when": "view == bookmarkExplorer && viewItem == category",
          "group": "inline@2"
        }
      ],
      "editor/context": [
        {
          "command": "bookmark-extension.addBookmark",
          "group": "bookmarks@1",
          "when": "editorFocus"
        },
        {
          "command": "bookmark-extension.addBookmarkWithLabel",
          "group": "bookmarks@2",
          "when": "editorFocus"
        }
      ],
      "commandPalette": [
        {
          "command": "bookmark-extension.removeBookmark",
          "when": "false"
        },
        {
          "command": "bookmark-extension.moveBookmarkToCategory",
          "when": "false"
        },
        {
          "command": "bookmark-extension.renameCategory",
          "when": "false"
        },
        {
          "command": "bookmark-extension.removeCategory",
          "when": "false"
        }
      ]
    },
    "keybindings": [
      {
        "command": "bookmark-extension.addBookmark",
        "key": "ctrl+alt+b",
        "mac": "cmd+alt+b",
        "when": "editorFocus"
      },
      {
        "command": "bookmark-extension.addBookmarkWithLabel",
        "key": "ctrl+alt+shift+b",
        "mac": "cmd+alt+shift+b",
        "when": "editorFocus"
      },
      {
        "command": "bookmark-extension.searchBookmarks",
        "key": "ctrl+alt+f",
        "mac": "cmd+alt+f"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "esbuild": "^0.25.8",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
